---
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import { actions } from "astro:actions";

// Verificar si ya hay una sesión activa
const session = Astro.cookies.get("session");
if (session) {
  return Astro.redirect("/dashboard");
}

// Muestra el resultado de la acción
const result = Astro.getActionResult(actions.loginUser);

// Si el login fue exitoso (la acción ya guardó la sesión), redirigir
if (result?.data?.status === 200) {
  return Astro.redirect("/dashboard");
}

---

<Layout title="Login">
  <main
    class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
  >
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
      <div class="text-center">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Login</h1>
        {
          result?.data?.body?.message && (
            <h2 class="text-sm text-red-500 mb-4 text-center">
              {result.data.body.message}
            </h2>
          )
        }
      </div>
      <form class="mt-8 space-y-6" action={actions.loginUser} method="POST">
        <div class="rounded-md shadow-sm -space-y-px">
          <div class="mb-4">
            <label for="correo" class="sr-only">Email</label>
            <input
              id="correo"
              name="correo"
              type="email"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
              placeholder="Email"
              
              transition:persist
            />
          </div>
          <div>
            <label for="clave" class="sr-only">Contraseña</label>
            <input
              id="clave"
              name="clave"
              type="password"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
              placeholder="Contraseña"
            />
          </div>
        </div>

        <div>
          <button
            type="submit"
            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          >
            Iniciar Sesión
          </button>
        </div>
      </form>

        {Astro.url.searchParams.get('logout') === 'success' && (
          <div class="mb-4 p-3 bg-green-100 text-green-700 rounded text-center">
            Has cerrado sesión correctamente.
          </div>
)}
    </div>
    
  </main>
</Layout>
