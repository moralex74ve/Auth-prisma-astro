---
interface Props {
  nombre?: string;
  correo?: string;
  rol?: string;
}

const { nombre, correo, rol } = Astro.props;
---

<div class="bg-white rounded-lg p-4 shadow-sm">
  {nombre && (
    <div class="flex flex-col items-center space-y-2">
      <span class="text-lg font-semibold text-gray-700">Usuario: {nombre}</span>
      {correo && <span class="text-sm text-gray-500">Email: {correo}</span>}
      {rol && <span class="text-sm text-gray-500">Rol: {rol}</span>}
    </div>
  )}
</div>